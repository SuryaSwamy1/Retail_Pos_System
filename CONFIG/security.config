* SECURITY CONFIGURATION
* User roles and permissions

* ROLE DEFINITIONS
ROLES=ADMIN<>MANAGER<>CASHIER<>INVENTORY<>REPORTS

* ADMIN PERMISSIONS
ADMIN.PERMS=ALL

* MANAGER PERMISSIONS
MANAGER.PERMS=POS.ALL<>RETURNS<>VOIDS<>DISCOUNTS<>REPORTS<>EMPLOYEE.VIEW<>INVENTORY.VIEW<>PRICE.CHANGE<>EOD

* CASHIER PERMISSIONS
CASHIER.PERMS=POS.SALE<>POS.RETURN<>CUSTOMER.LOOKUP<>PAYMENT.PROCESS<>RECEIPT.PRINT

* INVENTORY PERMISSIONS
INVENTORY.PERMS=INVENTORY.CREATE<>INVENTORY.UPDATE<>INVENTORY.ADJUST<>INVENTORY.TRANSFER<>PO.CREATE<>PO.RECEIVE

* REPORTS PERMISSIONS
REPORTS.PERMS=REPORTS.VIEW<>REPORTS.EXPORT

* PASSWORD POLICY
PASSWORD.MIN.LENGTH=8
PASSWORD.MAX.LENGTH=20
PASSWORD.REQUIRE.UPPERCASE=TRUE
PASSWORD.REQUIRE.LOWERCASE=TRUE
PASSWORD.REQUIRE.NUMBER=TRUE
PASSWORD.REQUIRE.SPECIAL=FALSE
PASSWORD.EXPIRY.DAYS=90
PASSWORD.HISTORY=5

* SESSION SETTINGS
SESSION.TIMEOUT=1800
MAX.CONCURRENT.SESSIONS=3
FORCE.LOGOUT.ON.TIMEOUT=TRUE

* AUDIT SETTINGS
AUDIT.LOGIN=TRUE
AUDIT.LOGOUT=TRUE
AUDIT.TRANSACTIONS=TRUE
AUDIT.PRICE.CHANGES=TRUE
AUDIT.INVENTORY.CHANGES=TRUE
AUDIT.VOIDS=TRUE
AUDIT.RETURNS=TRUE
